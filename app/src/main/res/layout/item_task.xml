<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/task_checkbox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:buttonTint="#50C2C9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/task_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/poppins_semibold"
            android:text="Learning Programming by 12PM"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete_task"
            app:layout_constraintStart_toEndOf="@+id/task_checkbox"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_delete_task"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Delete Task"
            app:tint="#FF5722"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_task_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/poppins"
            android:text="Complete the Java basics course"
            android:textColor="#666666"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/iv_priority"
            app:layout_constraintStart_toEndOf="@+id/task_checkbox"
            app:layout_constraintTop_toBottomOf="@+id/task_title" />

        <ImageView
            android:id="@+id/iv_priority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_priority_high"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FF5722" />

        <TextView
            android:id="@+id/task_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/poppins"
            android:text="Today"
            android:textColor="#50C2C9"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/task_checkbox"
            app:layout_constraintTop_toBottomOf="@+id/tv_task_notes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>